<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ButtonContainerStyleSecondary">
        <item name="android:padding">@dimen/game_entry_button_container_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonContainerStyleSecondaryWidget">
        <item name="android:padding">@dimen/game_entry_button_container_padding</item>
    </style>

    <style name="ButtonContainerStylePrimary">
        <item name="android:padding">@dimen/game_entry_button_container_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">96dp</item>
    </style>

    <style name="ButtonLabelTextStyle" parent="TextAppearance.AppCompat.Widget.Button">

    </style>
    <style name="ButtonValueTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="PitchCountHeroTextStyle" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SeasonTotalsValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textColor">@color/appWindowBackground</item>
    </style>
    <style name="SeasonAveragesValue" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="SeasonAveragesCenterValue" parent="TextAppearance.AppCompat.Display1">
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SeasonTotalsLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/appWindowBackground</item>

    </style>

    <style name="SeasonAveragesLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GameSummaryDetailCard" parent="CardView.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
