<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/GameSummaryDetailCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_game_summary_master_season_averages" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/GameSummaryDetailCard"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_ball_strike_distribution_with_labels" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/GameSummaryDetailCard"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <include layout="@layout/layout_game_summary_master_season_totals" android:padding="16dp" />
    </android.support.v7.widget.CardView>
</LinearLayout>